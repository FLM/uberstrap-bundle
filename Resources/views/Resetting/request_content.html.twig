<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" role="form" class="fos_user_resetting_request form-horizontal">
    {% if invalid_username is defined %}
        <div class="alert alert-danger alert-error">
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        </div>
    {% endif %}

    <div class="form-group">
        <label for="username" class="col-lg-3 col-sm-3 control-label">
            {{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}
        </label>

        <div class="col-lg-4 col-sm-4">
            <input type="text" id="username" name="username" required="required" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-4">
            <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </div>
</form>
